<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TP01.InscriptionPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="newUserEmail" Keyboard="Email"
               Placeholder="Entrez votre Email"
               MaxLength="50"
               />
            <Entry x:Name="newUserPW" IsPassword="True"
               Placeholder="Entrez votre mot de passe"
               MaxLength="50"
               />
            <Button x:Name="newUser" Text="Inscription"
                Clicked="Inscription"/>
            <Label x:Name="statusMessage"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>